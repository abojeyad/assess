body {
    font-family: Arial, sans-serif;
    background-color: #ffffff; /* اجعل الخلفية بيضاء */
    margin: 0;
    padding: 20px;
    color: #333;
}

.container {
    position: relative; /* لضمان أن العنصر الثانوي يمكنه التداخل */
    display: flex;
    justify-content: space-between;
}

.input-section, .output-section {
    width: 48%;
    background-color: transparent; /* اجعل الخلفية شفافة */
    padding: 20px;
    border-radius: 10px;

}
.container::before {
    content: '';
    background-image: url('path/to/your/image.jpg'); /* ضع مسار الصورة هنا */
    background-size: cover;
    position: absolute; /* لتداخلها مع المحتوى */
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    opacity: ; /* تعيين الشفافية إلى 50% */
    z-index: -1; /* ضمان أن الصورة في الخلفية */
}

h2 {
    text-align: center;
    color: #4a4a4a;
}

h4 {
    text-align: center;
    margin: 0;
    color: #4a4a4a;
}

table {
    width: 100%;
    border-collapse: collapse;
}

th, td {
    padding: 10px;
    border: 1px solid #e0e0e0;
    text-align: center;
}

input[type="text"], input[type="number"], input[type="file"] {
    width: calc(100% - 20px);
    padding: 10px;
    margin-top: 5px;
    border: 1px solid #ccc;
    border-radius: 5px;
}

.image-inputs {
    margin-top: 20px;
}

button {
    width: 100%;
    padding: 12px;
    background-color: #28a745;
    color: #fff;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-weight: bold;
    transition: background-color 0.3s ease;
}

button:hover {
    background-color: #218838;
}

.output-section {
    text-align: center;
}

#result-display {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 10px; /* تقليل التباعد بين العناصر */
}

.names-container {
    display: flex;
    align-items: center;
    gap: 20px;
    margin-bottom: 20px;
}

.names-container div {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.names-container img {
    border-radius: 50%;
    border: 3px solid #28a745;
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.15);
    width: 150px;
    height: 150px;
}

.names-container h4 {
    font-size: 18px;
    font-weight: bold;
}

.progress-container {
    width: 100%;
    max-width: 400px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 5px; /* تقليل التباعد بين أشرطة التقدم */
}

.progress-item {
    width: 100%;
    margin-top: 5px;
}

.progress-label {
    font-size: 14px;
    color: #4a4a4a;
	font-weight: bold;
}

.combined-progress-bar {
    position: relative; /* لتثبيت الأرقام في منتصف الشريط */
    display: flex;
    width: 100%;
    height: 30px; /* ارتفاع الشريط */
    background-color: #e0e0e0;
    border-radius: 15px; /* زوايا مدورة */
    overflow: hidden;
}

.player1-progress, .player2-progress {
    display: flex; /* عرض النص في الوسط */
    align-items: center; /* لمحاذاة الرقم وسطياً */
    justify-content: center;
    color: #fff;
    font-weight: bold;
    transition: width 0.5s ease-in-out; /* تحسين الحركة */
}

.player1-progress {
    background-color: #28a745; /* لون اللاعب الأول */
}

.player2-progress {
    background-color: #007bff; /* لون اللاعب الثاني */
}

/* تنسيق الأرقام داخل شريط التقدم */
.progress-text {
    position: absolute;
    width: 100%;
    text-align: center;
    font-size: 16px;
    font-weight: bold;
    color: #fff;
    line-height: 30px; /* ارتفاع يطابق الشريط لضمان وجود الرقم في الوسط */
    text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3); /* ظل خفيف لتحسين الوضوح */
}

.progress-numbers {
    display: flex;
    justify-content: space-between;
    width: 100%;
    margin-top: 5px;
    font-weight: bold;
    color: #4a4a4a;
}

.final-score {
    display: inline-block; /* جعلها عنصر كتلة للتطبيقات */
    transition: transform 0.3s ease, color 0.3s ease; /* تأثير الانتقال */
}

.final-score.pulse {
    transform: scale(1.2); /* تكبير الرقم */
    color: #f39c12; /* لون مختلف أثناء النبض */
}

.compare-button {
    width: auto; /* بحيث لا يشغل عرض كامل */
    padding: 8px 20px; /* ضبط المساحة الداخلية حسب الرغبة */
    font-size: 14px;
    border-radius: 5px;
    background-color: #28a745;
    color: #fff;
    border: none;
    cursor: pointer;
    font-weight: bold;
    transition: background-color 0.3s ease;
}

.compare-button:hover {
    background-color: #218838;
}

.player-total {
    font-size: 24px; /* حجم الخط */
    transition: transform 0.5s ease, opacity 0.5s ease; /* تأثير التحول والشفافية */
    transform: scale(0); /* بدء الحجم من 0 */
    opacity: 0; /* بدء الشفافية من 0 */
}

.player-total.show {
    transform: scale(1); /* العودة للحجم الطبيعي */
    opacity: 1; /* تعيين الشفافية إلى 1 */
}

@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

.loading-image {
    width: 100px; /* حجم الصورة */
    height: auto; /* الحفاظ على نسبة العرض إلى الارتفاع */
    animation: spin 1s linear infinite; /* تطبيق تأثير الدوران */
}
